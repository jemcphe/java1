package com.jemcphe.LeagueLib;

import android.content.Context;
import android.widget.LinearLayout;
import android.widget.LinearLayout.LayoutParams;
import android.widget.TextView;

public class Player {
	
	public static LinearLayout singleEntryWithLabel(Context context, String label, String hint) {
		LinearLayout ll = new LinearLayout(context);
		LayoutParams lp = new LayoutParams(LayoutParams.MATCH_PARENT, LayoutParams.WRAP_CONTENT);
		ll.setLayoutParams(lp);
		
		//Create TextView, set label, and add to View
		TextView textLabel = new TextView(context);
		textView.setText(label);
		ll.addView(textView);
		
		return ll;
	}
	
	public static singleButton(Context context, String buttonText){
		
	}
	
}
